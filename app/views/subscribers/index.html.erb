<div class="max-w-3xl mx-auto px-4 my-16">
  <div class="flex items-center justify-between pb-6 border-b dark:border-slate-700">
    <h1 class="text-3xl font-bold">Subscribers</h1>
    <div class="flex items-center justify-end">
      <%= link_to "New Subscriber", new_subscriber_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div id="subscribers" class="divide-y dark:text-slate-700 mb-10">
    <% @subscribers.each do |subscriber| %>
      <div class="py-3">
        <%= render subscriber %>

        <%= link_to "View subscriber", subscriber, class: "btn-link inline-block my-3" %>
      </div>
    <% end %>
  </div>
</div>
